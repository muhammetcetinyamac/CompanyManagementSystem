
@{
    ViewBag.Title = "İş Başvurusu";
    Layout = "~/Views/Shared/_LayoutJA.cshtml";
}
    
    <div class="col-lg-12">
        <div class="m-portlet m-portlet--tab">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                           İş Başvurusu
                        </h3>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("JobApplication", "Home", FormMethod.Post))
            {
                <!--begin::Form-->
                <form class="m-portlet m-portlet--tab">
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group m--margin-top-10">
                            <div class="alert m-alert m-alert--default" role="alert">
                                İş Başvurunuz İnsan Kaynakları tarafınca onaylandığında bilgilendirileceksiniz.
                            </div>
                        </div>

                        <div class="form-group m-form__group">
                            <label>TC Kimlik No</label>
                            <input type="text" class="form-control m-input" name="TCKN" placeholder="Kimlik No" required>
                        </div>
                        <div class="form-group m-form__group">
                            <label>Ad</label>
                            <input type="text" class="form-control m-input" name="FirstName" placeholder="Ad" required>
                        </div>
                        <div class="form-group m-form__group">
                            <label>Soyad</label>
                            <input type="text" class="form-control m-input" name="LastName" placeholder="Soyad" required>
                        </div>
                        <div class="form-group m-form__group">
                            <label>Telefon</label>
                            <input type="text" class="form-control m-input" name="Phone" placeholder="Telefon" required>
                        </div>
                        <div class="form-group m-form__group">
                            <label>Mail Adresi</label>
                            <input type="text" class="form-control m-input" name="Email" placeholder="Mail Adresi" required>
                        </div>
                        <div class="form-group m-form__group">
                            <label>CV uzantısı</label>
                            <input type="text" class="form-control m-input" name="CV" placeholder="Cv Uzantısı">
                        </div>

                        <div class="m-portlet__foot m-portlet__foot--fit">
                            <div class="m-form__actions">
                                <button type="submit" class="btn btn-accent">CV mi Gönder</button>
                            </div>
                        </div>
                    </div>

                </form>
            }
            <!--end::Form-->
        </div>
    </div>

