@{
    ViewBag.Title = "New";
    Layout = "~/Areas/BusinessStructure/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="m-portlet m-portlet--tab">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon m--hide">
                        <i class="la la-gear"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Dilekçe Oluştur
                    </h3>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("New", "Petition", FormMethod.Post))
        {
            <!--begin::Form-->
            <form class="m-portlet m-portlet--tab">
                <div class="m-portlet__body">
                    <div class="form-group m-form__group m--margin-top-10">
                        <div class="alert m-alert m-alert--default" role="alert">
                            Dilekçeniz İnsan Kaynakları tarafınca onaylandığında bilgilendirileceksiniz.
                        </div>
                    </div>

                    <div class="form-group m-form__group">
                        <label>Kurum</label>
                        <input type="text" class="form-control m-input" name="RelatedInstitution" placeholder="Kurum">
                    </div>
                    <div class="form-group m-form__group">
                        <label for="exampleSelect1">Dilekçe Türü</label>
                        <select class="form-control m-input" name="Type">
                            @foreach (var item in ViewBag.PTn)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <div class="form-group m-form__group">
                        <label for="exampleTextarea">İçerik</label>
                        <textarea class="form-control m-input m-input--air" name="Content" rows="3"></textarea>
                    </div>
                    <div class="m-portlet__foot m-portlet__foot--fit">
                        <div class="m-form__actions">
                            <button type="submit" class="btn btn-accent">Gönder</button>
                        </div>
                    </div>
                </div>
                
            </form>
        }
        <!--end::Form-->
    </div>
</div>




