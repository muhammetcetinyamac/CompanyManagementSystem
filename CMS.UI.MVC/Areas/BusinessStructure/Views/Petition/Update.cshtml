@model CMS.MODEL.Entities.Petition
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/BusinessStructure/Views/Shared/_Layout.cshtml";
}

    <div class="col-lg-12">
        <div class="m-portlet m-portlet--tab">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            Dilekçe Güncelle
                        </h3>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Update", "Petition", FormMethod.Post))
            {
                <!--begin::Form-->
        <form class="m-portlet m-portlet--tab">
            <div class="m-portlet__body">
                <div class="form-group m-form__group m--margin-top-10">
                    <div class="alert m-alert m-alert--default" role="alert">
                        Dilekçeniz İnsan Kaynakları tarafınca onaylandığında bilgilendirileceksiniz.
                    </div>
                </div>

                <div class="form-group m-form__group">
                    <label>Kurum</label>
                    <input type="text" class="form-control m-input" name="RelatedInstitution" value="@Model.RelatedInstitution">
                </div>
                <div class="form-group m-form__group">
                    <label>Dilekçe Konusu</label>
                    <input type="text" class="form-control m-input" name="Type" value="@Model.Type">
                </div>
                <div class="form-group m-form__group">
                    <label for="exampleTextarea">İçerik</label>
                    <textarea class="form-control m-input m-input--air" name="Content" rows="3">@Model.Content</textarea>
                </div>
                @Html.HiddenFor(x => x.Attachments)
                @Html.HiddenFor(x => x.Address)
                @Html.HiddenFor(x => x.IsActive)
                @Html.Hidden("ModifiedDate", DateTime.Now)
                @Html.HiddenFor(x => x.EmployeesId)
                @Html.HiddenFor(x => x.Confirmation)
                @Html.HiddenFor(x => x.Employees)
                <div class="m-portlet__foot m-portlet__foot--fit">
                    <div class="m-form__actions">
                        <button type="submit" class="btn btn-accent">Güncelle</button>
                    </div>
                </div>
            </div>                          
        </form>              
            }
            <!--end::Form-->
        </div>
    </div>

