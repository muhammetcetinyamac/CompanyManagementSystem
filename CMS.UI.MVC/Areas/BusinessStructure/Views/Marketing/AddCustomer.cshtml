@model CMS.MODEL.Entities.Customers
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Areas/BusinessStructure/Views/Shared/_Layout.cshtml";
}

    <div class="col-md-12">
        <h2>Pazarlama</h2>

        <div class="m-portlet m-portlet--tab">

            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            Müşteri Ekle
                        </h3>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("AddCustomer", "Marketing", FormMethod.Post))
            {
                <form class="m-form m-form--fit m-form--label-align-right">
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group">
                            <label>Şirket Adı</label>
                            <input type="text" class="form-control m-input" name="CompanyName" placeholder="Şirket Adı" required>
                        </div>
                        <div class="form-group m-form__group">
                            <label>Yetkili</label>
                            <input type="text" class="form-control m-input" name="ContactName" placeholder="Yetkili" required>
                        </div>
                        <div class="form-group m-form__group">
                            <label>Yetkili Ünvanı</label>
                            <input type="text" class="form-control m-input" name="ContactTitle" placeholder="Yetkili Ünvanı">
                        </div>
                        <div class="form-group m-form__group">
                            <label>Telefon</label>
                            <input type="number" class="form-control m-input" name="Phone" placeholder="Telefon" required>
                        </div>
                        <div class="form-group m-form__group">
                            <label>Adres</label>
                            <input type="text" class="form-control m-input" name="Address" placeholder="Adress">
                        </div>
                        <div class="form-group m-form__group">
                            <label>Mail</label>
                            <input type="text" class="form-control m-input" name="Mail" placeholder="Mail">
                        </div>
                        <div class="m-portlet__foot m-portlet__foot--fit">
                            <div class="m-form__actions">
                                <button type="submit" class="btn btn-success">Ekle</button>
                            </div>
                        </div>
                    </div>
                    
                </form>
            }
            </div>


    </div>