@model List<CMS.MODEL.Entities.Shippers>
@{
    ViewBag.Title = "Shipper";
    Layout = "~/Areas/BusinessStructure/Views/Shared/_Layout.cshtml";
}

    <div class="col-md-12">
        <h2>Pazarlama</h2>
        <!--Begin::Portlet-->
        <div class="m-portlet m-portlet--full-height  m-portlet--unair">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Taşıyıcılar
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <a href="@Url.Action("AddShipper","Marketing")" class="btn btn-info m-btn btn-lg 	m-btn m-btn--icon">
                    <span>
                        <i class="fa flaticon-signs-2flaticon-time-1"></i>
                        <span>Taşıyıcı Ekle</span>
                    </span>
                </a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Şirket Adı</th>
                            <th>Telefon</th>
                            <th>Adres</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.CompanyName</th>
                                <th>@item.Phone</th>
                                <th>@item.Address</th>
                                <th><a href="@Url.Action("UpdateShipper","Marketing" , new { Id = item.Id })" name="@item.Id" class="btn m-btn--pill m-btn--air m-btn m-btn--gradient-from-primary m-btn--gradient-to-info">Güncelle</a> <a href="@Url.Action("DeleteShipper","Marketing" , new { Id = item.Id })" name="@item.Id" class="btn m-btn--pill m-btn--air m-btn m-btn--gradient-from-danger m-btn--gradient-to-warning">Sil</a></th>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>


    </div>

