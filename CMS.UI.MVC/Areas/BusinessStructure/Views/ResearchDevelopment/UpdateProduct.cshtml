@model CMS.MODEL.Entities.Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Areas/BusinessStructure/Views/Shared/_Layout.cshtml";
}

    <div class="col-md-12">
        <h2>Ar-Ge</h2>

        <div class="m-portlet m-portlet--tab">

            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            @Model.ProductName Ürünü Güncelle
                        </h3>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("UpdateProduct", "ResearchDevelopment", FormMethod.Post))
            {
                <form class="m-form m-form--fit m-form--label-align-right">
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group">
                            <label for="exampleSelect1">Kategori</label>
                            <select class="form-control m-input" name="CategoryId">
                                @foreach (var item in ViewBag.GetCategories)
                                {
                                    <option value="@item.Id">@item.CategoryName</option>
                                }

                            </select>
                        </div>
                        <div class="form-group m-form__group">
                            <label>Ürün Adı</label>
                            <input type="text" class="form-control m-input" name="ProductName" value="@Model.ProductName">
                        </div>
                        <div class="form-group m-form__group">
                            <label for="exampleTextarea">Ürün Açıklaması</label>
                            <textarea class="form-control m-input" name="Description" rows="3"></textarea>
                        </div>
                        <div class="form-group m-form__group">
                            <label>Genişlik</label>
                            <input type="number" class="form-control m-input" name="Width" value="@Model.Width">
                        </div>
                        <div class="form-group m-form__group">
                            <label>Yükseklik</label>
                            <input type="number" class="form-control m-input" name="Height" value="@Model.Height">
                        </div>
                        <div class="form-group m-form__group">
                            <label for="exampleInputEmail1">Ürün Görseli Ekle</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="Picture">
                                <label class="custom-file-label" for="customFile">Seç</label>
                            </div>
                        </div>
                        <div class="form-group m-form__group">
                            <div class="m-form__actions">
                                <button type="submit" class="btn btn-success">Güncelle</button>
                            </div>
                        </div>
                    </div>

                </form>
            }


        </div>


    </div>

