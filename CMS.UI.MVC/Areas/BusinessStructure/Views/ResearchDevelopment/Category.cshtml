@model List<CMS.MODEL.Entities.Category>
@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/BusinessStructure/Views/Shared/_Layout.cshtml";
}

    <div class="col-md-12">
        <h2>Ar-Ge</h2>
        <!--Begin::Portlet-->
        <div class="m-portlet m-portlet--full-height  m-portlet--unair">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Kategoriler
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <a href="@Url.Action("AddCategory","ResearchDevelopment")" class="btn btn-success btn-lg m-btn 	m-btn m-btn--icon">
                    <span>
                        <i class="fa flaticon-search"></i>
                        <span>Katagory Ekle</span>
                    </span>
                </a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.CategoryName</th>
                                <th>@item.Description</th>
                                <th><a href="@Url.Action("UpdateCategory","ResearchDevelopment" , new { Id = item.Id })" name="@item.Id" class="btn m-btn--pill m-btn--air m-btn m-btn--gradient-from-primary m-btn--gradient-to-info">Güncelle</a> <a href="@Url.Action("DeleteCategory","ResearchDevelopment" , new { Id = item.Id })" name="@item.Id" class="btn m-btn--pill m-btn--air m-btn m-btn--gradient-from-danger m-btn--gradient-to-warning">Sil</a></th>
                            </tr>

                        }


                    </tbody>
                </table>
            </div>
        </div>


    </div>

